<% @user ||= current_user %>
<%= gravatar_for @user, size: 100 %>
<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<span id="following-<%= @user.id%>"><%= link_to "#{pluralize(@user.following.count, "following") }", following_user_path(@user) %></span>
<span id="followers-<%= @user.id%>"><%= link_to "#{pluralize(@user.followers.count, "followers") }", followers_user_path(@user) %></span>
<%= render "users/follow_form", user: @user %>